{% if reviews %}

  <div class="d-flex justify-end">
    <div class="form-group">
      <label for="select-sort">{{ entry_sort }}</label>
      <select name="review_sort" id="select-sort" class="form-control">
        {% for sort, text in sorts %}
          {% if selectedSort == sort %}
            <option value="{{ sort }}" selected>{{ text }}</option>
          {% else %}
            <option value="{{ sort }}">{{ text }}</option>
          {% endif %}
        {% endfor %}
      </select>
    </div>
  </div>
  {% for review in reviews %}
    <div class="review">
      <strong>{{ review.author }}</strong>

      <div>
        {% for i in 1..5 %}
          {% if review.rating < i %}
            <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% else %}
            <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endif %}
        {% endfor %}
      </div>

      <p>{{ review.text }}</p>

      {% if review.benefits is not empty %}
        <p><i class="fa fa-plus-circle"></i> {{ entry_benefits }}</p>
        <p>{{ review.benefits }}</p>
      {% endif %}

      {% if review.limitations is not empty %}
        <p><i class="fa fa-minus-circle"></i> {{ entry_limitations }}</p>
        <p>{{ review.limitations }}</p>
      {% endif %}
    </div>
  {% endfor %}
  <div class="row">
    <div class="col-sm-6 text-left">{{ pagination }}</div>
    <div class="col-sm-6 text-right">{{ results }}</div>
  </div>
{% else %}
  <p>{{ text_no_reviews }}</p>
{% endif %}
<script>
  $('#select-sort').on('change', function () {
    $('#review').html('');
    $('#review').load('index.php?route=product/product/review&product_id={{ product_id }}&sort=' + $(this).val());
  });
</script>